<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:weightSum="1">


    <QuickContactBadge
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/contactImage" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lastContactInfo"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/last_in_touch"
            android:paddingRight="5dp"
            android:id="@+id/lastDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="LAST CONTACT"
            android:id="@+id/lastContact" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/keep_in_touch_every"
            android:paddingRight="10dp"
            android:id="@+id/kitEvery" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fScalarSpinner" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fTypeSpinner" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="175dp"
        android:text="@string/button_done"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="close"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:clickable="true"
        android:enabled="true" />

