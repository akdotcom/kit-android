<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <TextView
            android:id="@+id/plusIcon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+"
            android:textColor="#666666"
            android:gravity="center"
            android:textSize="?android:attr/listPreferredItemHeightSmall"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:minWidth="?android:attr/listPreferredItemHeight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Contact"
            android:gravity="center_vertical"
            android:id="@+id/contactName"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/plusIcon"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textColor="#666666" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1mm"
        android:id="@+id/seperater"
        android:layout_below="@+id/plusIcon"
        android:background="#CCCCCC" />

    <ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/seperater"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entriesList"></ListView>

</RelativeLayout>